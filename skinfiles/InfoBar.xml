<screen name="InfoBar" flags="wfNoBorder" position="0,0" size="1920,1080" title="InfoBar" backgroundColor="transparent" animationMode="disable_onhide">
  <!-- Background -->
  <constant-widget name="background_infoBar" />
  <!-- Clock -->
  <constant-widget name="clock_menu" />
  <!-- Logo -->
  <widget alphatest="blend" position="40,841" render="XHDPicon" size="330,198" source="session.CurrentService" transparent="1" zPosition="4">
    <convert type="ServiceName">Reference</convert>
  </widget>
  <!-- Now: Title, Subtitle, Times -->
  <widget source="session.Event_Now" position="410,820" size="1208,56" backgroundColor="background" foregroundColor="foreground" font="SetrixHD;42" render="VRunningText" halign="left" valign="top" options="movetype=running,startpoint=0,direction=left,steptime=50,startdelay=2000,always=0,noWrap" transparent="1">
    <convert type="EventName">Name</convert>
  </widget>
  <widget source="session.Event_Now" position="412,874" size="1400,40" backgroundColor="background" foregroundColor="accent1" font="font_second_standard_small" halign="left" valign="bottom" render="Label" transparent="1" noWrap="1">
    <convert type="ScroungerEventExtractor">EpisodeNum,Subtitle(10),ParentalRating</convert>
  </widget>
  <widget source="session.Event_Now" position="1636,835" size="112,56" backgroundColor="background" foregroundColor="foreground" font="font_second_standard_small" halign="right" valign="bottom" render="Label" transparent="1">
    <convert type="EventTime">StartTime</convert>
    <convert type="ClockToText">Default</convert>
  </widget>
  <eLabel position="1760,835" size="22,56" backgroundColor="background" foregroundColor="foreground" font="font_second_standard_small" halign="center" valign="bottom" text="-" transparent="1" />
  <widget source="session.Event_Now" position="1765,835" size="90,56" backgroundColor="background" foregroundColor="foreground" font="font_second_standard_small" halign="right" valign="bottom" render="Label" transparent="1">
    <convert type="EventTime">EndTime</convert>
    <convert type="ClockToText">Default</convert>
  </widget>
  <widget source="session.Event_Now" position="1687,874" size="169,35" backgroundColor="background" foregroundColor="accent1" font="font_second_standard_small" halign="right" valign="bottom" render="Label" transparent="1">
    <convert type="EventTime">Remaining</convert>
    <convert type="RemainingToText">InMinutes</convert>
  </widget>
  <!-- ProgressBar-->
  <eLabel backgroundColor="accent1" foregroundColor="accent1" position="410,923" size="1448,1" />
  <widget foregroundColor="background_second" position="410,921" render="Progress" size="1448,5" source="session.Event_Now" transparent="1" zPosition="7">
    <convert type="EventTime">Progress</convert>
  </widget>
  <!-- Next: Title, Subtitle, Times -->
  <widget source="session.Event_Next" position="410,934" size="1208,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="SetrixHD;38" render="VRunningText" halign="left" valign="top" options="movetype=running,startpoint=0,direction=left,steptime=50,startdelay=2000,always=0,noWrap" transparent="1">
    <convert type="EventName">Name</convert>
  </widget>
  <widget source="session.Event_Next" position="412,984" size="1400,40" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="left" valign="bottom" render="Label" transparent="1" noWrap="1">
    <convert type="ScroungerEventExtractor">EpisodeNum,Subtitle(10),ParentalRating</convert>
  </widget>
  <widget source="session.Event_Next" position="1636,945" size="112,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="right" valign="bottom" render="Label" transparent="1">
    <convert type="EventTime">StartTime</convert>
    <convert type="ClockToText">Default</convert>
  </widget>
  <eLabel position="1760,945" size="22,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="center" valign="bottom" text="-" transparent="1" />
  <widget source="session.Event_Next" position="1765,945" size="90,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="right" valign="bottom" render="Label" transparent="1">
    <convert type="EventTime">EndTime</convert>
    <convert type="ClockToText">Default</convert>
  </widget>
  <widget source="session.Event_Next" position="1687,984" size="169,35" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="right" valign="bottom" render="Label" transparent="1">
    <convert type="EventTime">Remaining</convert>
    <convert type="RemainingToText">InMinutes</convert>
  </widget>
  <constant-widget name="infoBar_tuner" />
  <constant-widget name="infoBar_Icons" />
  <constant-widget name="recIcon_top" />
  <eLabel text="InfoBar" name="autoGeneratedScreenName" size="200,25" font="Regular;20" backgroundColor="#2d000000" valign="center" halign="right" foregroundColor="#00ffffff" position="1720,1055" />



  <widget source="session.extEvent_Now" backgroundColor="background" position="10,200" size="300,400" font="font_standard_small" foregroundColor="foreground" halign="left" valign="center" render="Label">
    <convert type="MetrixExtEventName"></convert>
    <convert type="MetrixExtraEventData">SUBTITLE SERIESINFO GENRE YEAR COUNTRY AGE CATEGORY</convert>
  </widget>

  <widget source="session.extEvent_Now" backgroundColor="background" position="330,200" size="300,500" font="font_standard_small" foregroundColor="foreground" halign="left" valign="center" render="Label">
    <convert type="ScroungerExtEventEPG">EpisodeNum, Subtitle(10), ParentalRating(FSK), Rating(Bewertung), RatingStars(gerundet:), Category(Kategorie:), Genre(Genre:), Year(Jahr:), Country(Land:), Title(Titel:)</convert>
  </widget>
  
  <widget alphatest="blend" source="session.extEvent_Now" pixmap="MetrixReloaded/media/logos/nosubtitles.png" position="1372,210" render="Pixmap" size="33,34" zPosition="1">
    <convert type="ScroungerExtEventEPG">IsEpgShareAvailable</convert>
    <convert type="ScroungerCompareString">true</convert>
    <convert type="ConditionalShowHide" />
  </widget>

  <widget source="session.extEvent_Now" backgroundColor="background" position="700,200" size="1000,500" font="font_standard_small" foregroundColor="foreground" halign="left" valign="center" render="Label">
    <convert type="ScroungerExtEventEPG">EpgShareRaw</convert>
  </widget>

  <widget alphatest="blend" source="session.extEvent_Now" pixmap="MetrixReloaded/media/logos/parentalrating/unknown.png" position="50,50" render="Pixmap" size="60,60" zPosition="1">
    <convert type="ScroungerExtEventEPG">ParentalRating</convert>
    <convert type="ScroungerCompareString"></convert>
    <convert type="ConditionalShowHide" />
  </widget> 
  
  <widget alphatest="blend" path="media/logos/parentalrating" position="150,50" render="ScroungerIcon" size="60,60" source="session.extEvent_Now" zPosition="3">
    <convert type="ScroungerExtEventEPG">ParentalRating</convert>
  </widget>
  
  <widget alphatest="blend" path="media/logos/stars" position="300,20" render="ScroungerIcon" size="316,27" source="session.extEvent_Now" zPosition="3">
    <convert type="ScroungerExtEventEPG">RatingStars</convert>
  </widget>
</screen>