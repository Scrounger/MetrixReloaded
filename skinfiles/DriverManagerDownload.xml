<screen name="DriverManagerDownload" position="center,center" size="1920,1080" title="VTI DriverManager" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="downloadmenu" backgroundColor="windowBackground" backgroundColorRows="listBackgroundBarsOne" render="Listbox" position="window_list_pos" size="window_list_size" scrollbarBackgroundPicture="MetrixReloaded/scrollbar_bg.png" scrollbarMode="showOnDemand" transparent="1" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1">
    <convert type="TemplatedMultiContent">
				{"template":
					[
						MultiContentEntryText(pos = (15, 8), size = (1020, 50), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 1),
						MultiContentEntryText(pos = (15, 58), size = (1020, 30), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 2),
					],
				"fonts": [gFont("SetrixHD", 32),gFont("SetrixSL", 24)],
				"itemHeight": 100
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/menu/vti.png" position="window_image_pos" size="window_image_size" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
  <eLabel text="DriverManagerDownload" name="autoGeneratedScreenName" size="200,25" font="Regular;20" backgroundColor="#2d000000" valign="center" halign="right" foregroundColor="#00ffffff" position="1720,1055" />
</screen>