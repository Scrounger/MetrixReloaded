<skin>
	<screen name="EPGImportConfig" position="0,0" size="1920,1080" title="EPG Import Configuration" backgroundColor="transparent" flags="wfNoBorder">
    <!-- Backgrounds -->
    <panel name="panel_background_window" />
    <!-- Title -->
    <panel name="panel_Title_window" />
    <!-- Clock -->
    <panel name="panel_clock_window" />
    <!-- Title Seperator -->
    <panel name="panel_seperator_window_title" />
    <!-- Left Panel (Left Side) -->
		<widget name="config" position="window_list_pos" size="window_list_size" itemHeight="50" font="font_list" secondfont="font_list_second" foregroundColor="foreground" backgroundColor="windowBackground" transparent="1" scrollbarMode="showOnDemand" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1" />
    <!-- Right Panel (Right Side) -->
    <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/plugin.png" position="window_image_pos" size="window_image_size" />		
    
    <!--TODO: anpassen-->
    <widget name="status" position="30,855" size="900,100" font="Regular; 28" halign="center" valign="center" backgroundColor="background" transparent="1" />
		<widget name="statusbar" position="30,965" size="900,40" font="Regular; 28" halign="center" valign="center" backgroundColor="background" transparent="1" />

    <!-- Remote Buttons -->
    <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/buttons/menu.png" position="window_remote_button_right_pos" size="window_remote_button_size" transparent="1" zPosition="10" />
    <!-- Buttons -->
    <panel name="panel_color_buttons_window" />
    <constant-widget name="key_red_name" />
    <constant-widget name="key_green_name" />
    <constant-widget name="key_yellow_name" />
    <constant-widget name="key_blue_name" />
    <widget text="EPGImportConfig" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
	</screen>

