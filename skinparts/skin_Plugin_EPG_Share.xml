<skin>
  <!-- EPG Share 5.84-->
  <parameters>
    <parameter name="EPGShareListItemHeight" value="50" />
    <parameter name="EPGShareListWidth" value="1065" />
    <parameter name="EPGShareListFont" value="SetrixHD;30" />
  </parameters>
  
	<screen name="epgShareSetup" title="EPG Share Setup" position="0,0" size="1920,1080" backgroundColor="transparent">
	  <!-- Backgrounds -->
	  <constant-widget name="background_window" />
	  <!-- Title -->
	  <constant-widget name="Title_window" />   
	  <!-- Clock -->
	  <constant-widget name="clock_window" />
	  <!-- Title Seperator -->
	  <constant-widget name="seperator_window_title" />
	  <!-- Left Panel (Left Side) -->
	  <widget name="config" 
		  backgroundColor="windowBackground" 
		  foregroundColor="foreground" 
		  position="window_list_pos" 
		  size="window_list_setup_size" 
		  itemHeight="50" 
		  font="font_list" 
	    scrollbarMode="showOnDemand" 
	    scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" 
	    scrollbarWidth="6" 
	    scrollbarSliderBorderWidth="0" 
	    scrollbarKeepGapColor="1" 
	    scrollbarGap="20" 
	    enableWrapAround="1" />
	  <!-- Right Panel (Right Side) -->
	  <ePixmap alphatest="blend" 
		  pixmap="MetrixReloaded/media/icons/plugin.png" 
		  position="window_image_pos" 
		  size="window_image_size" /> 
	  <widget name="info" 
		  position="window_desc_pos" 
		  size="window_desc_size" 
		  font="font_standard"
		  foregroundColor="foreground" 
		  backgroundColor="windowBackgroundSecond" 
		  halign="center" 
		  valign="center" 
		  transparent="1" /> 
	  <!-- Buttons -->
	  <constant-widget name="color_buttons_window" />  
	  <constant-widget name="key_red_name" />
	  <constant-widget name="key_green_name" />
	  <constant-widget name="key_yellow_name" />
	  <constant-widget name="key_blue_name" />
	</screen>
	
	<screen name="epgShareScreen" title="EPG Share Screen" position="0,0" size="1920,1080" backgroundColor="transparent">
	  <!-- Backgrounds -->
	  <constant-widget name="background_window" />
	  <!-- Title -->
	  <constant-widget name="Title_window" />   
	  <!-- Clock -->
	  <constant-widget name="clock_window" />
	  <!-- Title Seperator -->
	  <constant-widget name="seperator_window_title" />
	  <!-- Left Panel (Left Side) -->
	  <widget name="list" 
		  backgroundColor="windowBackground" 
		  foregroundColor="foreground" 
		  position="window_list_pos" 
		  size="window_list_setup_size" 
		  itemHeight="50" 
		  font="font_list" 
	    scrollbarMode="showOnDemand" 
	    scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" 
	    scrollbarWidth="6" 
	    scrollbarSliderBorderWidth="0" 
	    scrollbarKeepGapColor="1" 
	    scrollbarGap="20" 
	    enableWrapAround="1" />  
	  <!-- Right Panel (Right Side) -->
	  <ePixmap alphatest="blend" 
		  pixmap="MetrixReloaded/media/icons/plugin.png" 
		  position="window_image_pos" 
		  size="window_image_size" /> 
	  <widget name="info" 
		  position="window_desc_pos" 
		  size="window_desc_size" 
		  font="font_standard"
		  foregroundColor="foreground" 
		  backgroundColor="windowBackgroundSecond" 
		  halign="center" 
		  valign="center" 
		  transparent="1" />	  
	  <!-- Buttons -->
	  <constant-widget name="color_buttons_window" />  
	  <constant-widget name="key_red_name" />
	  <constant-widget name="key_green_name" />
	  <constant-widget name="key_yellow_name" />
	  <constant-widget name="key_blue_name" />	  
	</screen>	
</skin>