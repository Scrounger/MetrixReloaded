<screen name="MyPluginManager" title="VTi SoftwareManager" position="center,center" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="list" render="Listbox" transparent="1" backgroundColorRows="listBackgroundBarsOne" backgroundColor="windowBackground" position="window_list_pos" size="window_list_setup_two_rows_size" scrollbarMode="showOnDemand" scrollbarBackgroundPicture="MetrixReloaded/scrollbar_bg.png" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20">
    <convert type="TemplatedMultiContent">
      {"template": [
      MultiContentEntryText(pos = (105, 10), size = (900, 36), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0), # index 2 is the description
      MultiContentEntryText(pos = (105, 48), size = (900, 24), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 2), # index 0 is the name
      MultiContentEntryText(pos = (105, 76), size = (900, 24), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 1), # index 2 is the description
      MultiContentEntryPixmapAlphaTest(pos = (34, 20), size = (48, 48), png = 4), # index 4 is the status pixmap
      ],
      "fonts": [gFont("SetrixHD", 32),gFont("SetrixSL", 24)],
      "itemHeight": 106,
      "scrollbarMode": "showOnDemand"
      }
    </convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/vti.png" position="window_image_pos" size="window_image_size" />
  <widget name="searchchar" position="window_searchbar_pos" size="window_searchbar_size" valign="center" halign="center" zPosition="100" backgroundColor="background_second" transparent="0" font="SetrixHD;140" foregroundColor="foreground" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_name" />
  <constant-widget name="key_green_name" />
  <constant-widget name="key_yellow_name" />
  <eLabel text="MyPluginManager" name="autoGeneratedScreenName" size="200,25" font="Regular;20" backgroundColor="#2d000000" valign="center" halign="right" foregroundColor="#00ffffff" position="1720,1055" />
</screen>