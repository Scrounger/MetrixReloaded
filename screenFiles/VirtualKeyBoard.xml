<screen name="VirtualKeyBoard" position="center,center" size="1920,1080" title="Virtual Keyboard" flags="wfNoBorder" backgroundColor="transparent">
  <!-- TODO: Finetuning notwendig-->
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget name="header" position="105,160" size="1050,40" font="font_standard" transparent="1" noWrap="1" />
  <!-- Input mit Hintergrund-->
  <widget name="text" position="105,220" size="1050,75" font="font_second_standard" transparent="1" noWrap="1" halign="right" />
  <ePixmap pixmap="MetrixReloaded/media/vkey_text.png" position="105,215" zPosition="100" size="1050,52" alphatest="on" scale="1" />
  <!-- Keyboard-->
  <widget name="list" position="300,310" size="600,375" selectionDisabled="1" transparent="1" />
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/keyb.png" position="window_image_pos" size="window_image_size" />
  <widget source="country" render="Label" position="window_desc_pos" size="window_desc_size" font="font_standard" transparent="1" noWrap="1" />
  <eLabel text="VirtualKeyBoard" name="autoGeneratedScreenName" size="200,25" font="Regular;20" backgroundColor="#2d000000" valign="center" halign="right" foregroundColor="#00ffffff" position="1720,1055" />
</screen>