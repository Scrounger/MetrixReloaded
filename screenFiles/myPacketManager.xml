<screen name="myPacketManager" title="Download or delete Cam" position="center,center" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="list" backgroundColorRows="listBackgroundBarsOne" render="Listbox" transparent="1" backgroundColor="windowBackground" position="window_list_pos" size="window_list_size" scrollbarMode="showOnDemand" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20">
    <convert type="TemplatedMultiContent">
				{"template":
					[
						MultiContentEntryPixmapAlphaTest(pos = (18, 5), size = (48, 48), png = 4),
						MultiContentEntryText(pos = (90, 5), size = (870, 36), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 2),
						MultiContentEntryText(pos = (100, 40), size = (860, 30), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0),
						MultiContentEntryPixmapAlphaTest(pos = (5, 58), size = (0, 0), png = 5),
					],
					"fonts": [gFont("SetrixHD", 32),gFont("SetrixSL", 24)],
					"itemHeight": 70
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/vti.png" position="window_image_pos" size="window_image_size" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
  <widget text="myPacketManager" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>