<screen name="JobView" title="Job View" flags="wfNoBorder" position="center,center" size="1920,1080" backgroundColor="transparent">
    <!-- Backgrounds -->
  <panel name="panel_background_window" />
  <!-- Title -->
  <!-- <panel name="panel_Title_window" />-->
  <eLabel text="Job View" position="window_title_pos" valign="center" size="window_title_size" font="font_window_title" backgroundColor="windowBackground" transparent="1" />
  <!-- Clock -->
  <panel name="panel_clock_window" />
  <!-- Title Seperator -->
  <panel name="panel_seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  
  

  <panel name="panel_color_buttons_window" />
  <widget source="job_name" render="Label" position="105,170" size="1050,64" font="SetrixHD;30" backgroundColor="windowBackground" transparent="1" />
  <widget source="job_task" render="Label" position="105,250" size="1050,64" font="SetrixHD;30" backgroundColor="windowBackground" transparent="1" />
  <widget source="job_progress" render="Progress" position="105,340" size="1050,15" borderWidth="1" foregroundColor="foreground" backgroundColor="windowBackground" transparent="1" />
  <widget source="job_progress" render="Label" position="105,380" size="1050,32" font="SetrixHD;30" foregroundColor="accentColorOne" backgroundColor="windowBackground" transparent="1" zPosition="2" valign="center" halign="center">
    <convert type="ProgressToText" />
  </widget>
  <widget source="job_status" render="Label" position="105,430" size="1050,64" font="SetrixHD;28" foregroundColor="foreground" backgroundColor="windowBackground" transparent="1" />
  <widget name="config" itemHeight="50" font="font_list" secondfont="font_list_second" textOffset="5,3" position="105,520" backgroundColor="windowBackground" size="1050,300" transparent="1" scrollbarMode="showOnDemand" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1" />
<!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/setup.png" position="window_image_pos" size="window_image_size" scale="1" />

  <!-- Buttons -->
  <panel name="panel_color_buttons_window" />
  <widget font="font_key_standard" halign="left" valign="top" source="cancelable" render="FixedLabel" text="Cancel" position="key_red_mid_pos" size="key_size_mid" zPosition="1" backgroundColor="windowBackground" transparent="1">
    <convert type="ConditionalShowHide" />
  </widget>
  <widget font="font_key_standard" halign="left" valign="top" source="finished" render="FixedLabel" text="OK" position="key_green_mid_pos" size="key_size_mid" zPosition="1" backgroundColor="windowBackground" transparent="1">
    <convert type="ConditionalShowHide" />
  </widget>
  <widget font="font_key_standard" halign="left" valign="top" source="backgroundable" render="FixedLabel" text="Continue in background" position="key_blue_mid_pos" size="key_size_mid" zPosition="1" backgroundColor="windowBackground" transparent="1">
    <convert type="ConditionalShowHide" />
  </widget>
  
  <widget text="JobView" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>
