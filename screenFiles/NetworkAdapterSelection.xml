<screen name="NetworkAdapterSelection" position="center,center" size="1920,1080" title="Select Network Adapter" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <!--<constant-widget name="Title_window" />-->
  <eLabel text="Select Network Adapter" position="window_title_pos" size="window_title_size" font="font_window_title" backgroundColor="windowBackground" transparent="1" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="list" render="Listbox" position="window_list_pos" size="window_list_setup_size" backgroundColor="windowBackground" zPosition="10" scrollbarMode="showOnDemand">
    <convert type="TemplatedMultiContent">
				{"template": [
						MultiContentEntryText(pos = (85, 6), size = (740, 38), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_TOP, text = 1), # index 1 is the interfacename
						MultiContentEntryText(pos = (85, 40), size = (740, 26), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_BOTTOM, text = 2), # index 2 is the description
						MultiContentEntryPixmapAlphaBlend(pos = (10, 14), size = (54, 54), png = 3), # index 3 is the interface pixmap
						MultiContentEntryPixmapAlphaBlend(pos = (63, 46), size = (15, 16), png = 4), # index 4 is the default pixmap
					],
				"fonts": [gFont("SetrixHD", 32),gFont("SetrixSL", 24)],
				"itemHeight": 85
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/net.png" position="window_image_pos" size="window_image_size" />
  <widget name="introduction" position="window_desc_pos" size="window_desc_size" zPosition="10" font="font_standard" halign="center" valign="center" foregroundColor="foreground" transparent="1" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
  <constant-widget name="key_yellow_source" />
  <constant-widget name="key_blue_source" />
  <widget text="NetworkAdapterSelection" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="global.CurrentTime" position="1720,1055" />
</screen>