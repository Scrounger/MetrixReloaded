<screen name="CamSelectMenu" position="0,0" size="1920,1080" title="Main menu" flags="wfNoBorder" backgroundColor="transparent" NoAnimationAfter="1">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="list" render="Listbox" transparent="1" position="window_list_pos" size="window_list_size" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarKeepGapColor="1" scrollbarMode="showOnDemand" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarSliderForegroundColor="ScrollBarFG" scrollbarSliderBorderColor="ScrollBarBorder" enableWrapAround="1">
    <convert type="TemplatedMultiContent">
      {"template": [
      MultiContentEntryText(pos = (60, 7), size = (865, 75), font=0, flags = RT_HALIGN_LEFT, text = 0),
      MultiContentEntryPixmapAlphaTest(pos = (25, 25), size = (24, 24), png = 2) # index 4 is the status pixmap
      ],
      "fonts": [gFont("SetrixHD", 35),gFont("SetrixSL", 24)],
      "itemHeight": 74
      }
    </convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/camd.png" position="window_image_pos" size="window_image_size" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
  <constant-widget name="key_yellow_source" />
  <constant-widget name="key_blue_source" />
  <eLabel text="CamSelectMenu" name="autoGeneratedScreenName" size="200,25" font="Regular;20" backgroundColor="#2d000000" valign="center" halign="right" foregroundColor="#00ffffff" position="1720,1055" />
</screen>