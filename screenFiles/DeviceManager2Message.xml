<screen name="DeviceManager2Message" position="center,center" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget name="messagepic" pixmaps="MetrixReloaded/media/logos/message/info.png,MetrixReloaded/media/logos/message/attention.png,MetrixReloaded/media/logos/message/question.png" position="105,150" size="60,60" alphatest="blend" />
  <widget name="messagetype" position="180,150" size="900,50" font="font_standard" halign="center" valign="center" backgroundColor="windowBackground" foregroundColor="foreground" transparent="1" />
  <widget name="messagetext" position="180,200" size="900,500" font="font_standard" halign="center" valign="Top" backgroundColor="windowBackground" foregroundColor="foreground" transparent="1" />
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/vti.png" position="window_image_pos" size="window_image_size" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
</screen>