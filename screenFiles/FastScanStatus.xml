<screen name="FastScanStatus" position="center,center" size="1920,1080" title="Service Scan" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/dvbs.png" position="180,200" size="220,96" transparent="1" zPosition="2" />
  <widget name="scan_state" position="180,315" size="900,45" font="font_standard" backgroundColor="windowBackground" transparent="1" />
  <widget borderColor="foreground" foregroundColor="windowBackgroundSecond" borderWidth="1" name="scan_progress" position="180,375" size="900,22" transparent="1" />
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/search.png" position="window_image_pos" size="window_image_size" />
  <widget text="FastScanStatus" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>