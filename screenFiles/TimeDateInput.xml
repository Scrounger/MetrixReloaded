<screen name="TimeDateInput" title="Time/Date Input" position="center,center" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget name="config" position="window_list_pos" size="window_list_setup_size" textOffset="5,3" font="font_list" itemHeight="50" backgroundColor="windowBackground" transparent="1" scrollbarMode="showOnDemand" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1" />
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/setup.png" position="window_image_pos" size="window_image_size" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <widget name="canceltext" position="key_red_pos" zPosition="1" size="key_size" font="font_key_standard" halign="left" valign="center" transparent="1" backgroundColor="windowBackground" />
  <widget name="oktext" position="key_green_pos" zPosition="1" size="key_size" font="font_key_standard" halign="left" valign="center" transparent="1" backgroundColor="windowBackground" />
  <widget text="TimeDateInput" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="global.CurrentTime" position="1720,1055" />
</screen>