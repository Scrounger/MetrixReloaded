<screen name="CIconfigMenu" position="center,center" size="1920,1080" title="CI assignment" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <!--<constant-widget name="Title_window" />-->
  <eLabel text="CI assignment" position="window_title_pos" size="window_title_size" font="font_window_title" backgroundColor="windowBackground" transparent="1" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="CAidList_desc" render="Label" position="window_text_small_list_top_pos" size="window_text_small_list_size" font="font_standard" backgroundColor="windowBackground" transparent="1" />
  <widget source="CAidList" render="Label" position="window_small_list_top_pos" size="window_small_list_size" font="font_list" backgroundColor="windowBackground" transparent="1" />
  <widget source="ServiceList_desc" render="Label" position="window_text_small_list_bottom_pos" size="window_text_small_list_size" font="font_standard" backgroundColor="windowBackground" transparent="1" />
  <widget name="ServiceList" backgroundColorRows="listBackgroundBarsOne" textOffset="5,3" position="window_small_list_bottom_pos" size="window_small_list_size" backgroundColor="windowBackground" itemHeight="50" font="font_list" transparent="1" scrollbarMode="showOnDemand" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" />
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/camd.png" position="window_image_pos" size="window_image_size" />
  <widget source="ServiceList_info" render="Label" position="window_desc_pos" size="window_desc_size" font="font_standard" backgroundColor="windowBackgroundSecond" transparent="1" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
  <constant-widget name="key_yellow_source" />
  <constant-widget name="key_blue_source" />
</screen>