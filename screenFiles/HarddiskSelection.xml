<screen name="HarddiskSelection" position="center,center" size="1920,1080" title="Select HDD" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <!--<constant-widget name="Title_window" />-->
  <eLabel text="Select HDD" position="window_title_pos" size="window_title_size" font="font_window_title" backgroundColor="windowBackground" transparent="1" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget name="hddlist" backgroundColorRows="listBackgroundBarsOne" backgroundColor="windowBackground" position="window_list_pos" font="font_list" itemHeight="50" size="window_list_setup_size" scrollbarMode="showOnDemand" transparent="1" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarGap="20" scrollbarKeepGapColor="1" />
  <!-- Right Panel (Right Side) -->
  <ePixmap pixmap="MetrixReloaded/media/icons/hdd.png" position="window_image_pos" size="window_image_size" alphatest="blend" transparent="1" />
</screen>