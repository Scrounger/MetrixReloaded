<screen name="DriverManagerDownload" position="center,center" size="1920,1080" title="VTI DriverManager" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <panel name="panel_background_window" />
  <!-- Title -->
  <panel name="panel_Title_window" />
  <!-- Clock -->
  <panel name="panel_clock_window" />
  <!-- Title Seperator -->
  <panel name="panel_seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="downloadmenu" backgroundColor="windowBackground" backgroundColorRows="listBackgroundBarsOne" render="Listbox" position="window_list_pos" size="window_list_size" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarMode="showOnDemand" transparent="1" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1">
    <convert type="TemplatedMultiContent">
				{"template":
					[
						MultiContentEntryText(pos = (15, 8), size = (1020, 50), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 1),
						MultiContentEntryText(pos = (15, 58), size = (1020, 30), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 2),
					],
				"fonts": [gFont("SetrixHD", 30),gFont("SetrixSL", 24)],
				"itemHeight": 100
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/menu/vti_panel.png" position="window_image_pos" size="window_image_size" scale="1" />
  <!-- Buttons -->
  <panel name="panel_color_buttons_window" />
  <panel name="panel_key_red_source" />
  <panel name="panel_key_green_source" />
  <widget text="DriverManagerDownload" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>