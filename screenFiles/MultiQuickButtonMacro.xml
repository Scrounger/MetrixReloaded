<screen name="MultiQuickButtonMacro" position="center,center" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <panel name="panel_background_window" />
  <!-- Title -->
  <panel name="panel_Title_window" />
  <!-- Clock -->
  <panel name="panel_clock_window" />
  <!-- Title Seperator -->
  <panel name="panel_seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="menu" render="Listbox" position="window_list_pos" size="window_list_setup_size" scrollbarMode="showOnDemand" transparent="1" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarGap="20" scrollbarKeepGapColor="1">
    <convert type="TemplatedMultiContent" transparent="0">
				{"template": [
						MultiContentEntryText(pos = (10, 5), size = (1720, 36), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0),
					],
				"fonts": [gFont("SetrixHD", 30)],
				"itemHeight": 50
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/menu/multi_quickbutton.png" position="window_image_pos" size="window_image_size" scale="1" />
  <!-- Buttons -->
  <panel name="panel_color_buttons_window" />
  <widget name="buttonred" position="key_red_pos" zPosition="1" size="key_size" font="font_key_standard" halign="left" valign="top" backgroundColor="windowBackground" transparent="1" />
  <widget name="buttongreen" position="key_green_pos" zPosition="1" size="key_size" font="font_key_standard" halign="left" valign="top" backgroundColor="windowBackground" transparent="1" />
  <widget name="buttonyellow" position="key_yellow_pos" zPosition="1" size="key_size" font="font_key_standard" halign="left" valign="top" backgroundColor="windowBackground" transparent="1" />
  <widget name="buttonblue" position="key_blue_pos" zPosition="1" size="key_size" font="font_key_standard" halign="left" valign="top" backgroundColor="windowBackground" transparent="1" />
  <widget text="MultiQuickButtonMacro" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>