<screen name="BluetoothDiscoveryScreen" position="center,center" title="Bluetooth Discovery" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="deviceList" render="Listbox" backgroundColorRows="listBackgroundBarsOne" backgroundColor="windowBackground" position="window_list_pos" size="window_list_size" scrollbarMode="showOnDemand" transparent="1" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarGap="20" scrollbarKeepGapColor="1">
    <convert type="TemplatedMultiContent">
				{"template":
					[
						MultiContentEntryPixmapAlphaTest(pos = (5, 23), size = (48, 48), png = 1),
						MultiContentEntryText(pos = (70, 2), size = (988, 34), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0),
					],
				"fonts": [gFont("SetrixHD", 32),gFont("SetrixSL", 24)],
				"itemHeight": 90
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/setup.png" position="window_image_pos" size="window_image_size" />
  <widget source="description" render="Label" position="window_desc_pos" size="window_desc_size" font="font_standard" halign="center" valign="center" foregroundColor="foreground" backgroundColor="windowBackgroundSecond" transparent="1" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_name" />
  <constant-widget name="key_green_name" />
  <constant-widget name="key_yellow_name" />
  <constant-widget name="key_blue_name" />
  <widget text="BluetoothDiscoveryScreen" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="global.CurrentTime" position="1720,1055" />
</screen>