<screen name="Console" position="center,center" size="1920,1080" title="Command execution..." flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget name="text" position="window_list_pos" size="window_list_setup_size" font="font_list" backgroundColor="black" transparent="1" scrollbarWidth="6" scrollbarSliderBorderWidth="0" />
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/console.png" position="window_image_pos" size="window_image_size" />
</screen>