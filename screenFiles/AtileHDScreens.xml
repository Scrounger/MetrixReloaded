<screen name="AtileHDScreens" position="center,center" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent">
  <!-- VTI SkinSelector - Pro Einstellungen -->
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="menu" render="Listbox" backgroundColorRows="listBackgroundBarsOne" backgroundColor="windowBackground" transparent="1" position="window_list_pos" size="window_list_size" scrollbarMode="showOnDemand" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1">
    <convert type="TemplatedMultiContent">
				{"template":
					[
						MultiContentEntryPixmapAlphaTest(pos = (10, 6), size = (38, 38), png = 2),
						MultiContentEntryText(pos = (70, 7), size = (640, 36), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 1),
					],
				"fonts": [gFont("SetrixHD", 32)],
				"itemHeight": 50,
				"scrollbarMode": "showOnDemand",
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <widget name="Picture" position="window_image_pos" size="window_image_size" alphatest="on" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <constant-widget name="key_green_source" />
  <widget text="AtileHDScreens" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>