<screen name="AutoMountManager" position="center,center" size="1920,1080" title="MountManager" flags="wfNoBorder" backgroundColor="transparent">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <constant-widget name="Title_window" />
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget source="config" render="Listbox" position="window_list_pos" size="window_list_size" backgroundColor="windowBackground" zPosition="10" scrollbarMode="showOnDemand" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarGap="20">
    <convert type="TemplatedMultiContent">
				{"template": [
						MultiContentEntryText(pos = (85, 6), size = (1030, 38), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_TOP, text = 0), # index 1 is the interfacename
						MultiContentEntryText(pos = (85, 53), size = (1030, 26), font=1, flags = RT_HALIGN_LEFT|RT_VALIGN_BOTTOM, text = 2), # index 2 is the description
						MultiContentEntryPixmapAlphaTest(pos = (2, 14), size = (54, 54), png = 3), # index 3 is the interface pixmap
					],
				"fonts": [gFont("SetrixHD", 32),gFont("SetrixSL", 24)],
				"itemHeight": 90
				}
			</convert>
  </widget>
  <!-- Right Panel (Right Side) -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/icons/setup.png" position="menu_icon_pos" size="menu_icon_size" />
  <widget source="introduction" render="Label" position="window_desc_pos" size="window_desc_size" zPosition="10" font="font_standard" halign="center" foregroundColor="foreground" transparent="1" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_source" />
  <eLabel text="AutoMountManager" name="autoGeneratedScreenName" size="200,25" font="Regular;20" backgroundColor="#2d000000" valign="center" halign="right" foregroundColor="#00ffffff" position="1720,1055" />
</screen>