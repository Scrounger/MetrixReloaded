<screen name="menu_system" position="0,0" size="1920,1080" title="Main menu" flags="wfNoBorder" backgroundColor="transparent" NoAnimationAfter="1">
  <!-- Background -->
  <constant-widget name="background_menu" />
  <!-- Title -->
  <constant-widget name="title_menu" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_menu" />
  <!-- Menu List -->
  <widget source="menu" render="Listbox" transparent="1" position="menu_list_pos" size="menu_list_size" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarKeepGapColor="1" scrollbarMode="showOnDemand" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarSliderForegroundColor="ScrollBarFG" scrollbarSliderBorderColor="ScrollBarBorder" enableWrapAround="1">
    <convert type="TemplatedMultiContent">
      {"template": [	MultiContentEntryText(pos = (35, 10), size = (553, 52), flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0 ) ],
      "fonts": [gFont("SetrixHD", 35)],
      "itemHeight": 74
      }
    </convert>
  </widget>
  <!-- Icons -->
  <constant-widget name="icons_menu" />
  <!-- Clock -->
  <constant-widget name="clock_menu" />
  <panel name="panel_system_infos_menu" />
  <!-- Buttons - deaktiviert-->
  <widget text="menu_system" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="Title" position="1720,1055" />
</screen>