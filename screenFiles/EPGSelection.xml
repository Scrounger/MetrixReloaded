<screen name="EPGSelection" position="center,center" size="1920,1080" title="EPG Selection" flags="wfNoBorder" backgroundColor="transparent" NoAnimationAfter="1">
  <!-- Backgrounds -->
  <constant-widget name="background_window" />
  <!-- Title -->
  <widget font="font_window_title" position="window_title_pos" render="Label" size="window_title_size" source="Service" transparent="1" backgroundColor="windowBackground">
    <convert type="ServiceName">Name</convert>
  </widget>
  <!-- Title bei Verwendung als EPG-Suche-->
  <widget source="Title" render="Label" position="window_title_pos" size="window_title_size" font="font_window_title" backgroundColor="windowBackground" transparent="1" noWrap="1">
    <convert type="MetrixReloadedCompareString">EPG-Suche</convert>
  </widget>
  <!-- Clock -->
  <constant-widget name="clock_window" />
  <!-- Title Seperator -->
  <constant-widget name="seperator_window_title" />
  <!-- Left Panel (Left Side) -->
  <widget name="list" backgroundColorRows="listBackgroundBarsOne" position="window_list_pos" zPosition="10" size="window_list_size" backgroundColor="windowBackground" transparent="1" scrollbarMode="showOnDemand" scrollbarBackgroundPicture="MetrixReloaded/media/scrollbar_bg.png" scrollbarWidth="6" scrollbarSliderBorderWidth="0" scrollbarKeepGapColor="1" scrollbarGap="20" enableWrapAround="1" />
  <!-- Parameters: EPGlistText1OffSet, EPGlistText2OffSet, EPGlistNonRecTextOffset-->
  <!-- Fonts: EPGList0, EPGList1 -->
  <!-- Right Panel (Right Side) -->
  <widget position="window_epg_picon_pos" size="window_epg_picon_size" source="Service" render="XHDPicon" alphatest="blend" zPosition="1">
    <convert type="ServiceName">Reference</convert>
  </widget>
  <!-- EpgShare Image -->
  <widget backgroundColor="windowBackgroundSecond" foregroundColor="foreground" position="window_epg_picon_pos" scale="3" render="MetrixReloadedEventImage" size="window_epg_picon_size" source="ExtEvent" transparent="1" zPosition="3" />
  <widget source="Event" position="window_epg_name_pos" zPosition="1" size="window_epg_name_size" foregroundColor="foreground" backgroundColor="windowBackgroundSecond" font="font_epg_name" noWrap="1" transparent="1" render="VRunningText" options="movetype=running,startpoint=0,direction=left,steptime=50,repeat=5,startdelay=1500,always=0">
    <convert type="EventName">Name</convert>
  </widget>
  <widget source="Event" render="Label" position="window_epg_startTime_pos" zPosition="1" halign="right" size="window_epg_startendTime_size" font="font_standard" foregroundColor="foreground" backgroundColor="windowBackgroundSecond" transparent="1">
    <convert type="EventTime">StartTime</convert>
    <convert type="ClockToText" />
  </widget>
  <widget source="Event" render="Label" position="window_epg_endTime_pos" zPosition="1" halign="left" size="window_epg_startendTime_size" font="font_standard" foregroundColor="foreground" backgroundColor="windowBackgroundSecond" transparent="1">
    <convert type="EventTime">EndTime</convert>
    <convert type="ClockToText" />
  </widget>
  <eLabel backgroundColor="progressBarSmallBackground" foregroundColor="progressBarSmallBackground" position="window_epg_progressBar_bg_pos" size="window_epg_progressBar_bg_size" />
  <widget backgroundColor="progressBarBackground" foregroundColor="foreground" borderWidth="0" position="window_epg_progressBar_pos" render="Progress" size="window_epg_progressBar_size" source="Event" transparent="1" zPosition="1">
    <convert type="EventTime">Progress</convert>
  </widget>
  <widget font="font_standard_small" backgroundColor="windowBackgroundSecond" transparent="1" position="window_epg_desc_pos" size="622,475" source="Event" render="VRunningText" options="movetype=running,startpoint=0,direction=top,steptime=100,startdelay=6500,wrap,always=0">
    <convert type="EventName">FullDescription</convert>
  </widget>
  <!-- Remote Buttons -->
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/buttons/menu.png" position="window_remote_button_right_pos" size="window_remote_button_size" transparent="1" zPosition="10" />
  <ePixmap alphatest="blend" pixmap="MetrixReloaded/media/buttons/epg.png" position="window_remote_button_middle_pos" size="window_remote_button_size" transparent="1" zPosition="10" />
  <!-- Buttons -->
  <constant-widget name="color_buttons_window" />
  <constant-widget name="key_red_name" />
  <constant-widget name="key_green_name" />
  <constant-widget name="key_yellow_name" />
  <constant-widget name="key_blue_name" />
  <widget text="EPGSelection" render="MetrixReloadedScreenNameLabel" size="200,25" valign="center" halign="right" font="SetrixSL;16" foregroundColor="foreground" backgroundColor="#2d000000" source="global.CurrentTime" position="1720,1055" />
</screen>