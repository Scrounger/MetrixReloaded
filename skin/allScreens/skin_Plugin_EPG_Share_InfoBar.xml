<skin>
  <screen name="InfoBar" flags="wfNoBorder" position="0,0" size="1920,1080" title="InfoBar" backgroundColor="transparent" animationMode="disable_onhide">
    <!-- Background -->
    <constant-widget name="background_infoBar" />
    <!-- Clock -->
    <constant-widget name="clock_menu" />
    <!-- Logo -->
    <widget alphatest="blend" position="40,841" render="XHDPicon" size="330,198" source="session.CurrentService" transparent="1" zPosition="4">
      <convert type="ServiceName">Reference</convert>
    </widget>
    <!-- Now: Title, Subtitle, Times -->
    <widget source="session.Event_Now" position="410,820" size="1208,56" backgroundColor="background" foregroundColor="foreground" font="SetrixHD;42" render="VRunningText" halign="left" valign="center" options="movetype=running,startpoint=0,direction=left,steptime=50,startdelay=2000,always=0,noWrap" transparent="1">
      <convert type="EventName">Name</convert>
    </widget>
    <widget source="session.extEvent_Now" position="412,874" size="1400,35" backgroundColor="background" foregroundColor="accent1" font="font_second_standard_small" halign="left" valign="center" render="Label" transparent="1">
      <convert type="ScroungerExtEventName" />
      <convert type="ScroungerExtraEventData">SUBTITLE SERIESINFO GENRE YEAR COUNTRY</convert>
    </widget>
    <widget source="session.Event_Now" position="1636,820" size="112,56" backgroundColor="background" foregroundColor="foreground" font="font_second_standard_small" halign="right" valign="center" render="Label" transparent="1">
      <convert type="EventTime">StartTime</convert>
      <convert type="ClockToText">Default</convert>
    </widget>
    <eLabel position="1756,820" size="22,56" backgroundColor="background" foregroundColor="foreground" font="font_second_standard_small" halign="center" valign="center" text="-" transparent="1" />
    <widget source="session.Event_Now" position="1765,820" size="90,56" backgroundColor="background" foregroundColor="foreground" font="font_second_standard_small" halign="right" valign="center" render="Label" transparent="1">
      <convert type="EventTime">EndTime</convert>
      <convert type="ClockToText">Default</convert>
    </widget>
    <widget source="session.Event_Now" position="1687,874" size="169,35" backgroundColor="background" foregroundColor="accent1" font="font_second_standard_small" halign="right" valign="center" render="Label" transparent="1">
      <convert type="EventTime">Remaining</convert>
      <convert type="RemainingToText">InMinutes</convert>
    </widget>
    <!-- ProgressBar-->
    <eLabel backgroundColor="accent1" foregroundColor="accent1" position="410,923" size="1448,1" />
    <widget foregroundColor="background_second" position="410,921" render="Progress" size="1448,5" source="session.Event_Now" transparent="1" zPosition="7">
      <convert type="EventTime">Progress</convert>
    </widget>

    <!-- Next: Title, Subtitle, Times -->
    <widget source="session.Event_Next" position="410,934" size="1208,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="SetrixHD;38" render="VRunningText" halign="left" valign="center" options="movetype=running,startpoint=0,direction=left,steptime=50,startdelay=2000,always=0,noWrap" transparent="1">
      <convert type="EventName">Name</convert>
    </widget>
    <widget source="session.extEvent_Next" position="412,988" size="1400,35" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="left" valign="center" render="Label" transparent="1">
      <convert type="ScroungerExtEventName" />
      <convert type="ScroungerExtraEventData">SUBTITLE SERIESINFO GENRE YEAR COUNTRY</convert>
    </widget>
    <widget source="session.Event_Next" position="1636,934" size="112,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="right" valign="center" render="Label" transparent="1">
      <convert type="EventTime">StartTime</convert>
      <convert type="ClockToText">Default</convert>
    </widget>
    <eLabel position="1756,934" size="22,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="center" valign="center" text="-" transparent="1" />
    <widget source="session.Event_Next" position="1765,934" size="90,56" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="right" valign="center" render="Label" transparent="1">
      <convert type="EventTime">EndTime</convert>
      <convert type="ClockToText">Default</convert>
    </widget>
    <widget source="session.Event_Next" position="1687,988" size="169,35" backgroundColor="background" foregroundColor="infoBar_next_event" font="font_second_standard_small" halign="right" valign="center" render="Label" transparent="1">
      <convert type="EventTime">Remaining</convert>
      <convert type="RemainingToText">InMinutes</convert>
    </widget>
    <constant-widget name="infoBar_tuner" />
    <constant-widget name="infoBar_Icons" />
  </screen>
</skin>